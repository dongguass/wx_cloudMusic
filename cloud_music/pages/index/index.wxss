/* 轮播图区域 */
.turnPictrue{
  width: 100%;
  height: 300rpx;
}

.turnPictrue image{
  width: 100%;
  height: 100%;
}

/* 五个图标的导航区域 */
.navContainer{
  display: flex;
}
/* 弹性容器可以嵌套 */
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(240, 19, 19);
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  margin: 20rpx 0;
  color: #fff;
}

.navItem text{
  font-size: 26rpx;
}


