/* pages/search/search.wxss */
.searchContainer{
  padding: 0 20rpx;
}
/* 头部搜索框样式 */
.searchContainer .header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}
.searchInput{
  position: relative;
  flex: 1;
  background-color: rgba(237, 237, 237, 0.3);
  border-radius: 10rpx;
}
.clear{
  position: absolute;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
  z-index: 99;
}

.searchOne{
  position: absolute;
  left: 10rpx;
  width: 12rpx;
  height: 12rpx;
}
.cancel{
  width: 100rpx;
  text-align: center;
}

.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}

/* 热搜榜样式 */
.hotContainer .title{
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
}

.hotList{
  display: flex;
  flex-wrap: wrap;
}

.hotList .hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order{
  margin: 0 10rpx;
}

.hotItem .hotImage{
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/* 搜索内容展示样式 */
.searchContent{
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}

.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .songName{
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 搜索历史板块 */
.history{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  margin: 40rpx 0;
}

.history .title{
  font-size: 28rpx;
}

.history .historyItem{
  height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.deleteItem{
 position: absolute;
 right: 10rpx;
 bottom: 25rpx;
}